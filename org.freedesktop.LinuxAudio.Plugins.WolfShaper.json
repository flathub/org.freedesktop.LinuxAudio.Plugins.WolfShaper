{
    "id": "org.freedesktop.LinuxAudio.Plugins.WolfShaper",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//22.08",
    "runtime-version": "stable",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "22.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/WolfShaper"
    },
    "modules": [
        {
            "name": "wolf-shaper",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "aarch64": {
                        "env": {
                            "NOOPT": "true"
                        }
                    }
                }
            },
            "build-commands": [
                "make BUILD_JACK=false -j $FLATPAK_BUILDER_N_JOBS",
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -R bin/wolf-shaper.lv2 ${FLATPAK_DEST}/lv2/",
                "install -Dm755 -t ${FLATPAK_DEST}/vst bin/wolf-shaper-vst.so",
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -R bin/wolf-shaper.vst3 ${FLATPAK_DEST}/vst3/",
                "install -Dm755 bin/wolf-shaper.clap -t ${FLATPAK_DEST}/clap",
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/wolf-shaper",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.WolfShaper.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.WolfShaper --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.WolfShaper"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/wolf-plugins/wolf-shaper/releases/download/v1.0.2/wolf-shaper-v1.0.2-source.tar.gz",
                    "sha256": "b18e579410771bb0cb42b50cc609c51c2e1655c48ec4acbee386a090fb418c5c"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.WolfShaper.metainfo.xml"
                }
            ]
        }
    ]
}
