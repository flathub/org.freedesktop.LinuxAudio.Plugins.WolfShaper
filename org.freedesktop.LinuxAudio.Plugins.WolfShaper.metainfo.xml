<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<component type="addon">
  <id>org.freedesktop.LinuxAudio.Plugins.WolfShaper</id>
  <extends>org.freedesktop.LinuxAudio.BaseExtension</extends>
  <name>WolfShaper</name>
  <summary>WolfShaper LV2/VST/VST2/CLAP plugin</summary>
  <description>
    <p>Wolf Shaper is a waveshaper plugin with a graph editor, in LV2, VST, VST3 and CLAP.</p>
  </description>
  <project_license>GPL-3.0</project_license>
  <metadata_license>CC0-1.0</metadata_license>
  <update_contact>hub_AT_figuiere_net</update_contact>
  <url type="homepage">https://wolf-plugins.github.io/wolf-shaper/</url>
  <releases>
    <release version="1.0.1" date="2023-02-20">
      <url>https://github.com/wolf-plugins/wolf-shaper/releases/tag/v1.0.1</url>
      <description>
        <ul>
          <li>Fix dsp/gui inconsistencies and improve generic UI.</li>
          <li>Fix missing VST3 plugin categories.</li>
          <li>Set CLAP 'plugin features'.</li>
          <li>Set the UI as 'user resizable'.</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2022-12-29">
      <url>https://github.com/pdesaulniers/wolf-shaper/releases/tag/v1.0.0</url>
      <description>
        <ul>
          <li>VST3 and CLAP support.</li>
          <li>High-DPI support.</li>
          <li>Rework the context menu so that it does not create a separate window.</li>
        </ul>
      </description>
    </release>
    <release version="0.1.8" date="2020-10-01">
      <url>https://github.com/pdesaulniers/wolf-shaper/releases/tag/v0.1.8</url>
      <description>
        <ul>
          <li>Context menu improvements.</li>
          <li>The UI does not try to remember its size anymore (this
          would cause some issues in some hosts, such as #126).</li>
        </ul>
      </description>
    </release>
    <release version="0.1.7" date="2018-12-14" />
  </releases>
</component>
